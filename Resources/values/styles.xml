<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FitnessTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/fitnessPrimary</item>
        <item name="colorPrimaryDark">@color/fitnessPrimaryDark</item>
        <item name="colorAccent">@color/fitnessAccent</item>    
    </style>

  <style name="FitnessTheme.ActionBar.Transparent" parent="FitnessTheme">
    <item name="colorPrimary">@android:color/transparent</item>
  </style>

  <style name="NavigationTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/fitnessAccent</item>
    <item name="colorPrimaryDark">@color/fitnessAccent</item>
    <item name="colorAccent">@color/fitnessAccent</item>
  </style>
  
</resources>
